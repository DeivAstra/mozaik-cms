<window viewModel="@id('vm') @init('top.mozaik.frnd.admin.vm.site.EditSiteVM')"
	form="@id('form') @load(vm.bean) @save(vm.bean, before='save')" contentStyle="padding:0">
	<button label="Save" onClick="@command('save')"/>
	<vlayout style="padding:20px">	
		<hlayout>
			<label class="form-label" value="Title:"/>
			<textbox class="form-field" value="@bind(form.title)" maxlength="100"
				constraint="${application.attributes.cache.constraint.noempty}"/>
		</hlayout>
		<hlayout>
			<label class="form-label" value="Domain / IP:"/>
			<textbox class="form-field" value="@bind(form.domains)" maxlength="255"
				constraint="${application.attributes.cache.constraint.noempty}"/>
		</hlayout>
		<hlayout>
			<label class="form-label" value="Description:"/>
			<textbox class="form-field" value="@bind(form.descr)" rows="2" maxlength="255"/>
		</hlayout>
		<hlayout>
			<label class="form-label" value="Alias"/>
			<textbox class="form-field" value="@bind(form.alias)" maxlength="255"/>
		</hlayout>
		<hlayout>
			<label class="form-label" value="Index Page:"/>
			<label class="form-label" id="selectedIndexPageInfoLabel" width="300px"/>
			<button label="..." onClick="@command('selectIndexPage')"/>
		</hlayout>
		<hlayout>
			<label class="form-label" value="Login Page:"/>
			<label class="form-label" id="selectedLoginPageInfoLabel" width="300px"/>
			<button label="..." onClick="@command('selectLoginPage')"/>
		</hlayout>
		<hlayout>
			<label class="form-label" value="404 Page:"/>
			<label class="form-label" id="selected404PageInfoLabel" width="300px"/>
			<button label="..." onClick="@command('select404Page')"/>
		</hlayout>
	</vlayout>
</window>